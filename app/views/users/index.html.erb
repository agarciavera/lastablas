<% provide(:title, 'Lista de usuarios') %>
<h1>Índice de usuarios</h1>

<%= will_paginate :previous_label => "Previo", :next_label => "Siguiente"%>
<table class="datatable table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Nombre</th>
      <th>Email</th>
      <th>Teléfono</th>
      <th>Número de hijos</th>
    </tr>
  </thead>
  <tbody>
      <%= render @users %>
  </tbody>
</table>
<script src="/components/patternfly/components/datatables/media/js/jquery.dataTables.js"></script>
  <script>
    // Initialize Datatables
    $(document).ready(function() {
      $('.datatable').dataTable();
    });
  </script>

<%= will_paginate :previous_label => "Previo", :next_label => "Siguiente"%>
