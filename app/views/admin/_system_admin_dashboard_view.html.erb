<div class="panel panel-default">
  
  <div style="float: left; width: 50%">
    <div class="panel-heading">
      <h3 class="panel-title"><%="Número de usuarios"%></h3>
    </div>
    <div class="panel-body">
      <div class="container-fluid">
        <p>
          <ul class="list-group">
            <li> Actualmente hay inscritos:
              <ul>
                <li> <%= @users_count %> usuarios. </li>
              </ul>
            </li>
        </p>
      </div>
    </div>
  </div>  

  <div style="float: left; width: 50%">
      <div class="panel-heading">
        <h3 class="panel-title"><%="Usuarios con más de un hijo"%></h3>
      </div>
      <div class="panel-body">
        <div class="container-fluid">
          <p>
            <ul class="list-group">
              <li> Actualmente hay inscritos:
                <ul>
                  <li> <%= @users_with_at_least_2_offspring %> usuarios con más de un hijo. </li>
                </ul>
              </li>
          </p>
      </div>
    </div>
  </div> 

  <div style="float: left; width: 50%">
      <div class="panel-heading">
        <h3 class="panel-title"><%="Número de catecúmenos"%></h3>
      </div>
      <div class="panel-body">
        <div class="container-fluid">
          <p>
            <ul class="list-group">
              <li> Actualmente hay inscritos:
                <ul>
                  <li> <%= @offspring_count %> catecúmenos. </li>
                </ul>
              </li>
          </p>
      </div>
    </div>
  </div>   

  <div style="float: left; width: 50%">
      <div class="panel-heading">
        <h3 class="panel-title"><%="Número de usuarios sin hijos"%></h3>
      </div>
      <div class="panel-body">
        <div class="container-fluid">
          <p>
            <ul class="list-group">
              <li> Actualmente hay inscritos:
                <ul>
                  <li> <%= @zero_offspring_count %> usuarios sin hijos. </li>
                </ul>
              </li>
          </p>
      </div>
    </div>
  </div> 
</div> 
