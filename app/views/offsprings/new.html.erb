<% provide(:title, 'Nuevo Hijo') %>
<h1>
  <%= "Añadir hijo de #{current_user.first_name} #{current_user.last_name}:" %>
</h1>

<div class="container">
  <%= form_for @offspring do |f| %>
    <form class="form-horizontal">
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :grade %>
        <%= f.select :grade, Offspring.grades.map { |w,y| [I18n.t(w), w] }, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t(:create), class:"btn btn-primary btn-lg", data: { confirm: '¿Es Ud. el padre o tutor legal del niño?'}%>
      </div>

    </form>
<% end %>

</div>
